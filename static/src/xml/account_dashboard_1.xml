                    </div>
                </div>

                <!-- box total CA comptabilisé et payé -->
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    <div class="general-layout">
                        <div class="icon-layout">
                            <div class="col-3">
                                <i class="fa fa-money icon-custom"/>
                            </div>
                            <div class="col-6 title-custom">
                                CA COMPTABILISÉ
                                <br/>
                                NON-PAYÉ TTC
                            </div>
                            <div class="col-3">
                            </div>
                        </div>
                        <div class="col-sm-12 col-lg-12 content-layout">
                            <div class="stat_count"><t t-esc="widget.ca_cnp"/></div>
                        </div>
                    </div>
                </div>

                <!-- box total CA comptabilisé et non-payé -->
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    <div class="general-layout">
                        <div class="icon-layout">
                            <div class="col-3">
                                <i class="fa fa-money icon-custom"/>
                            </div>
                            <div class="col-6 title-custom">
                                CA COMPTABILISÉ
                                <br/>
                                PAYÉ TTC
                            </div>
                            <div class="col-3">
                            </div>
                        </div>
                        <div class="col-sm-12 col-lg-12 content-layout">
                            <div class="stat_count"><t t-esc="widget.ca_cp"/></div>
                        </div>
                    </div>
                </div>

                <!-- box total CA non comptabilisé TTC -->
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    <div class="general-layout">
                        <div class="icon-layout">
                            <div class="col-3">
                                <i class="fa fa-money icon-custom"/>
                            </div>
                            <div class="col-6 title-custom">
                                CA NON COMPTABILISÉ
                                <br/>
                                TTC
                            </div>
                            <div class="col-3">
                            </div>
                        </div>
                        <div class="col-sm-12 col-lg-12 content-layout">
                            <div class="stat_count"><t t-esc="widget.ca_nc"/></div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </t>

    <!--section graph chiffres d'affaires et entrées par ateliers-->
    <t t-name="RoChart">
        <div class="row">
            <div class="row graph-style" style="margin-top: 15px;">
                <div class="col-sm-6 col-lg-6 graph-box">
                    <div class="oh-card text-color">
                        <div class="oh-card-body pb-0">
                            <h4 class="mb-0">
                            </h4>
                        </div>
                        <canvas class="enters_report" width="700" height="500"/>
                    </div>
                </div>
                <div class="col-sm-12 col-lg-6 col-md-6 graph-box">
                    <div class="oh-card text-color">
                        <div class="oh-card-body pb-0">
                            <h4 class="mb-0">
                            </h4>
                        </div>
                        <canvas class="invoice_report_graph" width="400" height="320"/>
                    </div>
                </div>
            </div>
        </div>
    </t>

